{
  "manifest_version": 3,
  "name": "WebBlock",
  "version": "1.0.0",
  "description": "Don't get stuck on the web. Block distracting websites, set daily time limits, schedule block windows, or use Tunnel Vision mode to block all but one website.",
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "alarms",
    "tabs"
  ],
  "minimum_chrome_version": "102",
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "WebBlock",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png"
    }
  },
  "web_accessible_resources": [{
    "resources": ["blocked.html"],
    "matches": ["<all_urls>"]
  }]
}
